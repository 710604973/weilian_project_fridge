<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="账号登录"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="使用手机端"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="云米商城APP"
                    android:textColor="#00adb9"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="扫码登录"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/login_download_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_green_circle"
                    android:padding="8dp"
                    android:text="下载云米商城APP"
                    android:textColor="#00adb9"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/login_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_green_circle"
                    android:padding="8dp"
                    android:text="点击查看操作指引"
                    android:textColor="#00adb9"
                    android:textSize="10sp" />
            </LinearLayout>

            <!--<ImageView-->
            <!--android:id="@+id/qecode_img"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="60dp"-->
            <!--android:background="@drawable/viomi_qrcode_bg"-->
            <!--android:padding="@dimen/font_size_11sp"-->
            <!--android:src="@drawable/viomi_qrcode" />-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginBottom="39dp"
                android:layout_marginTop="82dp">

                <ProgressBar
                    android:id="@+id/login_progressbar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/login_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_rim_blue_corner_73"
                    android:paddingBottom="16dp"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:paddingTop="16dp"
                    android:text="@string/management_login_retry"
                    android:textColor="@color/color_viomi_green"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/login_qr_code"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:contentDescription="@null"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>