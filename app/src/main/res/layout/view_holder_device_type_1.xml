<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder_device_type_1_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_device_circle_blue"
    android:gravity="center"
    android:orientation="vertical">

    <!--设备图标-->
    <ImageView
        android:id="@+id/holder_device_type_1_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/icon_device_scene_air_purifier" />

    <!--设备名称-->
    <TextView
        android:id="@+id/holder_device_type_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:text="@string/iot_device_air_purifier"
        android:textColor="@color/color_white_alpha_80"
        android:textSize="16sp" />

    <!--设备显示数据-->
    <TextView
        android:id="@+id/holder_device_type_1_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iot_value_default"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>